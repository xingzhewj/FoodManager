<!--列表信息框-begin-->
<style>
	*{
		margin: 0px;
	}
	.msgback{
		position: absolute;
		width: 100%;
		height: 100%;
		background-color: black;
		opacity: 0.3;
		z-index: 1;
		top:0px;
		left: 0px;
	}
	.msg-contain{
		position: absolute;
		z-index: 100;
		height: 200px;
		width: 150px;
		background-color: white;
		top: 50%;
		left: 50%;
		margin-left: -75px;
		margin-top: -100px;
	}
	.msg-title{
		background-color: #f5f5f5;
		border-bottom: 1px solid #eee;
		padding: 9px 15px;
		line-height: 1;
		color: black;
		opacity: 1.0;
	}
	.msg-list{
		list-style: none;
		padding: 0px;
		display: block;
		width: 80%;
		margin:10px auto 0px auto;
		text-align: center;
	}
	.msg-list li:nth-child(odd){
		background-color: rgb(212, 255, 217);
	}
	.msg-list li:nth-child(even){
		background-color: rgb(255, 242, 226);
	}
	.msg-list li{
		padding: 5px 0 5px 0;
		margin-bottom: 2px;
	}
</style>
<div class="msgback">
</div>
<div class="msg-contain">
	<div class="msg-title">
		<h3>行者信息</h3>
	</div>
	<div class="msg-info">
		<ul class="msg-list" id="msglist">
			<li class="msg-item">
				<p>信息1</p>
			</li>
			<li class="msg-item">
				<p>信息1</p>
			</li>
			<li class="msg-item">
				<p>信息1</p>
			</li>
			<li class="msg-item">
				<p>信息1</p>
			</li>
		</ul>
	</div>
</div>
<script type="text/javascript">
	var initInfo = (function(){
		var infoList = [];
		var title = "";
		function initInfo(param){
			infoList = param.infoList;
			title = param.title;

			init();
		}
		function init(){
			initDom();
			initEvent();
		}
		function initEvent(){
			jQuery(".msg-contain,.msgback").on("click",function(){
				jQuery(".msg-contain").hide();
				jQuery(".msgback").hide();
			});
		}
		function initDom(){
			jQuery('#msglist').children().remove();
			jQuery(infoList).each(function(index, el) {
				var htmlstr = '<li class="msg-item"><p>'+el+'</p></li>';
				jQuery(htmlstr).appendTo('#msglist');
			});
		}
		return initInfo;
	})();
	var infoList = new initInfo({title:"行者菜单",infoList:["信息1","信息2","信息3","信息4"]});
</script>
<!--列表信息框-end-->